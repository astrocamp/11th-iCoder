<div class="mt-3">
  <h1 class="text-2xl font-bold mb-5">組織修改</h1>
  <%= form_with model: @team, url: teams_path do |form| %>
    <div class="mb-3">
      <%= form.label :name, "組織名稱" %>
      <%= form.text_field :name %><br/>
    </div>
    <div class="mb-3">
      <%= form.label :avatar, "團隊圖示" %>
      <%= form.file_field :avatar %><br/>
    </div>
    <span>目前圖示：</span>
    <% if @team.avatar.attached? %>
      <%= image_tag @team.avatar, width: "150px" if @team.avatar.attached? %>
    <% else %>
      <%= image_tag("/default_profile.png", width: "150px")%>
    <% end %>
    <%= form.submit "更新", class:"btn-dashboard-create" %>
  <% end %>
</div>
