<div class="p-10">
  <%= form_with model:@question do |form| %>
    <div class="px-5 py-5">title: <%= form.text_field :title, value: "#{current_user.id}" , :readonly => true , class:"border-0" %></div>
    <div class="px-5 py-5">Language: <%= form.select :language, ["Javascript", "Ruby"] %></div>
    <div class="px-5 py-5">Difficulty: <%= form.select :Difficulty, ["Easy", "Medium","Hard","Not specified"] %></div>
    <div class="px-5"> 
      <%= form.label :Internal_Description %>
    </div>
    <div class="px-5">
      <%= form.text_area :Internal_Description %>
    </div>
    <div class="px-5 "> 
    <%= form.label :Candidate_Instructions %>
    </div>
    <div class="px-5">
      <%= form.text_area :Candidate_Instructions %>
    </div>
    <div><%= form.submit "Next" %></div>
  <% end %>
</div>
