<div class="mb-5">
  <%= form_with model: Comment.new, url:question_comments_path(question) do |form| %>
    <%= form.hidden_field :parent_id, value: parent_comment.id if parent_comment.present?  %>
    <%= form.text_area :content, cols: 100, rows: 2, class:"border-2 border-gray-300 rounded" %><br/>
    <%= form.submit "送出", class:"btnstyle_dashboard" %>
    <%= link_to "取消", "javascipt://false", data:{action:'click->reply#none'}, class:"btnstyle_dashboard" if parent_comment.present? %>
  <% end %>
</div>
