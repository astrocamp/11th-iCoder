<%= form_with model: Comment.new, url:question_comments_path(question) do |form| %>
  <% if parent_comment.present? %>
    <%= form.hidden_field :parent_id, value: parent_comment.id %>
  <% end %>
  <%= form.label :content, "內容" %>
  <%= form.text_area :content %>
  <%= form.submit "送出" %>
<% end %>
